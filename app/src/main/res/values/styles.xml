<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Card.BaseStyle" parent="Base.CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <style name="CardContent.Title" parent="TextAppearance.AppCompat">
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">@color/colorTextHeader</item>
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
